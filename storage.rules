rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access to product images
    match /products/{productId}/{imageId} {
      allow write: if true
        && request.resource.size < 5 * 1024 * 1024 // 5MB limit
        && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Allow write access to product images (alternative path)
    match /products/{imageId} {
      allow write: if true
        && request.resource.size < 5 * 1024 * 1024 // 5MB limit
        && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Allow write access to other image directories if needed
    match /images/{imageId} {
      allow write: if true
        && request.resource.size < 5 * 1024 * 1024 // 5MB limit
        && request.resource.contentType.matches('image/.*'); // Only images
    }
  }
}